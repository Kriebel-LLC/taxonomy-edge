{
  "name": "web",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "turbo": "next dev --turbo",
    "start": "next start",
    "lint": "next lint",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "preview": "next build && next start",
    "db:migrate-gen": "dotenv -e .env.local -- drizzle-kit generate:sqlite --schema=./db/schema.ts --out=./db/migrations/",
    "db:migrate-list": "wrangler d1 migrations list taxonomy-edge",
    "db:migrate-run": "wrangler d1 migrations apply taxonomy-edge",
    "db:migrate-local": "yarn run db:migrate-run --local",
    "db:migrate-preview": "yarn run db:migrate-run --preview --remote",
    "db:migrate-prod": "yarn run db:migrate-run --remote",
    "db:migrate-drop": "dotenv -e .env.local -- drizzle-kit drop --out=./src/db/migrations/"
  },
